    <resultMap type="UserAccount" id="UserAccountResult">
        <result property="id"    column="id"    />
        <result property="userName"    column="user_name"    />
        <result property="password"    column="password"    />
        <result property="salt"    column="salt"    />
        <result property="realName"    column="real_name"    />
        <result property="nickname"    column="nickname"    />
        <result property="mobile"    column="mobile"    />
        <result property="email"    column="email"    />
        <result property="idType"    column="id_type"    />
        <result property="idCode"    column="id_code"    />
        <result property="sex"    column="sex"    />
    </resultMap>

    <sql id="selectUserAccount">
        select id, user_name, password, salt, real_name, nickname, mobile, email, id_type, id_code, sex from user_account
    </sql>

